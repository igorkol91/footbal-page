<div class = 'row'>
<div class = 'col-2'>

</div>
<div class = 'col-8'>
<p id="notice"><%= notice %></p>
<%= render 'form', tweet: @tweet %>
<h1>Tweets</h1>
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= find_author(tweet.author_id) %></td>
        <td><%= tweet.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<div class = 'col-2'>
<table>
    <tbody>
    <% @users_all.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'See profile', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
