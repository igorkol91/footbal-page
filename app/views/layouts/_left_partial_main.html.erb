<% if logged_in? %>

<div class='d-flex text-center justify-content-around'>
    <span class='text-white pt-3'>
        <%= current_user.followers.count %>
        <h5>Followers</h5>
    </span>
    <span class='text-white pt-3'>
        <%= current_user.followeds.count %>
        <h5>Following</h5>
    </span>
</div>
<div class='d-flex align-items-center flex-column'>
  <p class="nav-item pt-4 h4">
    <%= link_to 'Home', tweets_path, class: 'text-white text-decoration-none' %> 
  </p>
  <p class="nav-item pt-2 h4">
    <%= link_to 'MyProfile', user_path(current_user), class: 'text-white text-decoration-none' %> 
  </p>
</div>

<% end %>
